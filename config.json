{
  "system": {
    "wifi_ssid": "${WIFI_SSID}",
    "wifi_password": "${WIFI_PASSWORD}",
    "display_brightness": 50,
    "rotation_interval": 5,
    "timezone": "Asia/Kolkata"
  },
  "display": {
    "width": 64,
    "height": 64,
    "bit_depth": 4,
    "brightness": {
      "auto": false,
      "manual": 0.5,
      "day": 0.8,
      "night": 0.2
    }
  },
  "network": {
    "timeout": 10,
    "retry_count": 3,
    "retry_delay": 5
  },
  "web": {
    "port": 80,
    "enabled": true
  },
  "screens": {
    "main": {
      "enabled": true,
      "plugins": [
        {
          "name": "weather",
          "position": "top",
          "height": 12,
          "width": 64,
          "x": 0,
          "y": 0,
          "config": {
            "enabled": true,
            "location": "auto",
            "units": "metric"
          }
        },
        {
          "name": "clock",
          "position": "center",
          "height": 7,
          "width": 64,
          "x": 0,
          "y": 14,
          "config": {
            "enabled": true,
            "display_seconds": true,
            "format_24h": true,
            "utc_offset_hours": 5.5,
            "timezone_name": "IST"
          }
        },
        {
          "name": "news",
          "position": "bottom",
          "height": 41,
          "width": 64,
          "x": 0,
          "y": 23,
          "config": {
            "enabled": true,
            "rss_url": "https://feeds.bbci.co.uk/news/technology/rss.xml",
            "article_rotation_minutes": 5
          }
        }
      ]
    },
    "hn": {
      "enabled": true,
      "plugins": [
        {
          "name": "hackernews",
          "position": "top",
          "height": 64,
          "width": 64,
          "x": 0,
          "y": 0,
          "config": {
            "enabled": true,
            "story_rotation_minutes": 5,
            "max_stories": 50,
            "max_title_length": 100
          }
        }
      ]
    }
  }
}
